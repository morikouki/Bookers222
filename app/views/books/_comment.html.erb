<% comments.each do |comment| %>
				<tr>
					<td>
						<%= attachment_image_tag(comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg" ) %><br>
						<%= comment.user.name %>
					</td>
					<td><%= comment.comment %></td>
					<td>
						<% if comment.user == current_user %>
							<%= link_to 'Destroy',  book_book_comment_path(@book, comment), method: :delete, remote: true, class:'btn btn-danger' %>
						<% end %>
					</td>
				</tr>
			<% end %>